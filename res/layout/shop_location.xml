<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">
              
       <TextView android:id="@+id/shopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="14sp" />
       
       <ImageView android:id="@+id/image"
             android:contentDescription="@string/blank"
             android:layout_width="fill_parent"
             android:minWidth="180dp"
             android:layout_height="5dp"
             android:layout_marginBottom="4dp"
             android:background="@color/dark_red" />
       
       <TextView android:id="@+id/shopAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="12sp" />
       
		<LinearLayout
    		android:id="@+id/layout_tel"
    		android:orientation="horizontal"
    		android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
    		android:layout_height="wrap_content">             
				<!-- ImageView android:id="@+id/image"
					android:src="@drawable/telicon"
					android:contentDescription="@string/desc_divider"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp" /-->		   	
       			<TextView android:id="@+id/shopTel"
		            android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:autoLink="phone"
            		android:textColor="#FFF"
            		android:textColorLink="#FFF"
            		android:textSize="12sp" />
       	</LinearLayout>
       
        <TextView android:id="@+id/shopWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textColor="#FFF"
            android:textColorLink="#FFF"
            android:layout_marginTop="3dp"
            android:textSize="12sp" />
       
		<LinearLayout
    		android:id="@+id/layoutHours"
    		android:orientation="horizontal"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
    		android:padding="0dp">
              
		       <TextView android:id="@+id/shopHoursKey"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:autoLink="web"
            		android:textColor="#FFF"
            		android:textSize="12sp"
            		android:layout_marginRight="5dp"
            		android:text="@string/shopHoursKey" />
		       <TextView android:id="@+id/shopHours"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:autoLink="web"
                    android:layout_marginRight="5dp"
            		android:textColor="#FFF"
            		android:textSize="12sp" />
       		</LinearLayout>       
</LinearLayout>